@using AutoVille.Models
@model dynamic

@{
    if (null != Session["Admin"])
    {

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/Content/css/adminstyle.css" rel="stylesheet" />

    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div style="color: black;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;">@Html.ActionLink("Log Out", "Ends", "Autoville")</div>
</nav>

<nav class="navbar-default navbar-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav" id="main-menu">
            <li class="text-center">
                <img src="~/Content/img/find_user.png" class="user-image img-responsive" />
            </li>


            <li>
                <a href="~/Autoville/adminhome"><i class="fa fa-dashboard fa-3x"></i> Home</a>
            </li>
            <li>
                <a href="~/Autoville/approve"><i class="fa fa-desktop fa-3x"></i> Approve Ad</a>
            </li>
            <li>
                <a href="~/Autoville/create"><i class="fa fa-qrcode fa-3x"></i> Create Ad</a>
            </li>
            <li>
                <a class="active-menu" href="~/Autoville/delete"><i class="fa fa-bar-chart-o fa-3x"></i> Delete Ad</a>
            </li>
            <li>
                <a href="~/Autoville/viewreq"><i class="fa fa-bar-chart-o fa-3x"></i> Buying Requests</a>
            </li>
        </ul>

    </div>

</nav>

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Admin Dashboard</h2>
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Delete Ad
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <h2>Cars</h2>
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Make</th>
                                        <th>Model</th>
                                        <th>Registration City</th>
                                        <th>Removal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model.Car)
                                    {
                                        <tr>
                                            <td>@c.make</td>
                                            <td>@c.model</td>
                                            <td>@c.reg_city</td>
                                            <td><a href="/AutoVille/cdelete/@c.car_id">Delete</a></td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>

                        <div class="table-responsive">
                            <h2>Bikes</h2>
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Make</th>
                                        <th>Model</th>
                                        <th>Registration City</th>
                                        <th>Removal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model.Bike)
                                    {
                                        <tr>
                                            <td>@c.make</td>
                                            <td>@c.model</td>
                                            <td>@c.reg_city</td>
                                            <td><a href="/AutoVille/bdelete/@c.bike_id">Delete</a></td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

</body>
 }

    else
    {
        Response.Redirect("~/AutoVille/log");
    }
}


